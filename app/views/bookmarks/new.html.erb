<nav class="navbar navbar-light bg-light px-5">
  <i class="fa-solid fa-film"></i>
  <form class="form-inline pull-right">
    <%= link_to "Home", lists_path, class: "btn btn-outline-success my-2 my-sm-0" %>
  </form>
</nav>
<div class="text-center">
  <h1>Create a new bookmark:</h1>
</div>
<div class="container w-50">
    <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, prompt: "Choose a movie" %>
          <%= f.input :comment, placeholder: 'Enter a comment' %>
          <%= f.submit class: "btn btn-flat" %>
    <% end %>
</div>
